<resources>

    <style name="RippleGreyTheme" parent="@android:style/Widget.Material.Button">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="ScreenTitleTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScreenMessageTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FlatButton" parent="@android:style/Widget.Material.Button">
        <item name="android:theme">@style/RippleGreyTheme</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="ToolbarBlackStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="ItemTitleListTile" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ItemUserNickListTile" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/blue</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ItemFullUserNameListTile" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ItemSubtitleListTile" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/gray_252B31</item>
    </style>

    <style name="ItemIconTextListTile" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorDetail</item>
    </style>

</resources>
